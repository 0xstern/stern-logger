{
  "name": "@mrstern/logger",
  "version": "0.2.0",
  "description": "A structured logging library built on Pino with OpenTelemetry support and advanced transport capabilities.",
  "keywords": [
    "logger",
    "logging",
    "pino",
    "opentelemetry",
    "structured-logging",
    "transport",
    "pino-pretty",
    "pino-roll",
    "typescript",
    "observability"
  ],
  "author": "0xstern <mrsirstern@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/0xstern/stern-logger.git"
  },
  "bugs": {
    "url": "https://github.com/0xstern/stern-logger/issues"
  },
  "homepage": "https://github.com/0xstern/stern-logger#readme",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./browser": {
      "types": "./dist/browser/index.d.ts",
      "import": "./dist/browser/index.mjs",
      "require": "./dist/browser/index.js"
    },
    "./transports/loki": {
      "types": "./dist/transports/loki.d.ts",
      "import": "./dist/transports/loki.mjs",
      "require": "./dist/transports/loki.js"
    },
    "./utils/metrics": {
      "types": "./dist/utils/metrics.d.ts",
      "import": "./dist/utils/metrics.mjs",
      "require": "./dist/utils/metrics.js"
    }
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.mjs",
    "dist/**/*.d.ts",
    "!dist/**/*.map",
    "README.md",
    "LICENSE.md"
  ],
  "type": "module",
  "sideEffects": false,
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.5.1",
    "@types/bun": "latest",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^60.7.1",
    "eslint-plugin-n": "^17.23.1",
    "globals": "^15.0.0",
    "prettier": "^3.0.0",
    "typescript-eslint": "^8.45.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "scripts": {
    "build": "bun run build.ts",
    "test": "bun test",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "bun format && bun run lint && bun typecheck && bun run test && bun run build"
  },
  "engines": {
    "node": ">=23.11.0"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "pino": "^10.1.0",
    "pino-abstract-transport": "^3.0.0",
    "pino-loki": "^2.3.0",
    "pino-pretty": "^13.1.2",
    "pino-roll": "^4.0.0"
  },
  "optionalDependencies": {
    "pino-loki": "^2.3.0"
  }
}
